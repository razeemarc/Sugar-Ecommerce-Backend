generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"   // You can change to "mysql" or "postgresql" later
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement()) // Primary key auto increment
  name    String
  email   String  @unique                      // Unique email
  createdAt DateTime @default(now())           // Auto timestamp
}
